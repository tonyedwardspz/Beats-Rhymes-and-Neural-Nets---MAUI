<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_App.MainPage"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout
            Padding="60,20,60,0"
            Spacing="25">
            
            <Image
                Source="beats_splash.png"
                HeightRequest="400"
                Aspect="AspectFit"
                SemanticProperties.Description="Beats, Rhymes, and Neural Nets app logo" />

            <!-- Navigation Buttons -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15" Padding="30,50,60,0">
                <Button Grid.Column="0"
                        Text="🤖 LLM Chat"
                        BackgroundColor="#0078D4"
                        TextColor="White"
                        CornerRadius="8"
                        FontSize="20"
                        FontAttributes="Bold"
                        Clicked="OnLLMChatClicked" />
                
                <Button Grid.Column="1"
                        Text="🎤 Transcription"
                        BackgroundColor="#28A745"
                        TextColor="White"
                        CornerRadius="8"
                        FontSize="20"
                        FontAttributes="Bold"
                        Clicked="OnTranscriptionClicked" />
                
                <Button Grid.Column="2"
                        Text="🎵 Rap Mode"
                        BackgroundColor="#FF6B35"
                        TextColor="White"
                        CornerRadius="8"
                        FontSize="20"
                        FontAttributes="Bold"
                        Clicked="OnRapModeClicked" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
