<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MAUI_App.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Settings">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- App Settings Section -->
            <Frame BackgroundColor="LightBlue" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="App Settings" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />
                    
                    <!-- API Configuration -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="LLMAPI Base URL:" FontAttributes="Bold" />
                        <Entry x:Name="ApiUrlEntry" 
                               Text="http://localhost:5000"
                               Placeholder="Enter LLMAPI URL" />
                    </VerticalStackLayout>
                    
                    <!-- Theme Selection -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Theme:" FontAttributes="Bold" />
                        <Picker x:Name="ThemePicker" Title="Select Theme">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Light</x:String>
                                    <x:String>Dark</x:String>
                                    <x:String>System</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- LLM Settings Section -->
            <Frame BackgroundColor="LightGreen" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="LLM Settings" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />
                    
                    <!-- Request Timeout -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Request Timeout (minutes):" FontAttributes="Bold" />
                        <Slider x:Name="TimeoutSlider" 
                                Minimum="1" 
                                Maximum="10" 
                                Value="5" />
                        <Label Text="{Binding Source={x:Reference TimeoutSlider}, Path=Value, StringFormat='{0:F0} minutes'}" 
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    
                    <!-- Auto-save responses -->
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" 
                               Text="Auto-save responses" 
                               FontAttributes="Bold" 
                               VerticalOptions="Center" />
                        <Switch Grid.Column="1" x:Name="AutoSaveSwitch" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Grid.Column="0" 
                        Text="Save Settings" 
                        BackgroundColor="Green" 
                        TextColor="White"
                        Clicked="OnSaveSettingsClicked" />
                
                <Button Grid.Column="1" 
                        Text="Reset to Default" 
                        BackgroundColor="Orange" 
                        TextColor="White"
                        Clicked="OnResetSettingsClicked" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
