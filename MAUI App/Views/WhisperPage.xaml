<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MAUI_App.ViewModels"
             x:DataType="vm:WhisperPageViewModel"
             x:Class="MAUI_App.Views.WhisperPage">
    <ContentPage.Content>
        <Grid Margin="20" ColumnSpacing="20" RowSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            
            <!-- Left Column: Controls -->
            <ScrollView Grid.Column="0" VerticalOptions="FillAndExpand">
                <StackLayout Spacing="15">
                    <!-- Recording Section -->
                    <Label Text="Recording" FontSize="18" FontAttributes="Bold" />
                    
                    <Button Text="{Binding RecordingButtonText}"
                            Command="{Binding ToggleRecordingCommand}"
                            BackgroundColor="{Binding RecordingButtonColor}" />
                    
                    <Button Text="Transcribe"
                            Command="{Binding ProcessCommand}"
                            BackgroundColor="Blue" />
                    
                    <Button Text="{Binding PlaybackButtonText}"
                            Command="{Binding TogglePlaybackCommand}"
                            BackgroundColor="{Binding PlaybackButtonColor}" />
                    
                    <!-- Chunked Transcription Section -->
                    <Label Text="Chunked Transcription" FontSize="18" FontAttributes="Bold" Margin="0,20,0,0" />
                    
                    <Button Text="{Binding ChunkedButtonText}"
                            Command="{Binding ToggleChunkedCommand}"
                            BackgroundColor="{Binding ChunkedButtonColor}" />
                    
                    <!-- File Upload Section -->
                    <Label Text="File Upload" FontSize="18" FontAttributes="Bold" Margin="0,20,0,0" />
                    
                    <Button Text="Select Audio File"
                            Command="{Binding SelectFileCommand}"
                            BackgroundColor="LightBlue" />
                    
                    <Label Text="{Binding SelectedFileName}" 
                           FontSize="12" 
                           TextColor="Gray" 
                           HorizontalOptions="Center"
                           LineBreakMode="TailTruncation" />
                    
                    <Button Text="Transcribe Selected File"
                            Command="{Binding TranscribeFileCommand}"
                            BackgroundColor="Green"
                            IsEnabled="{Binding HasSelectedFile}" />
                </StackLayout>
            </ScrollView>
            
            <!-- Right Column: Results -->
            <Grid Grid.Column="1" VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <Label Text="Transcription Results" 
                       Grid.Row="0"
                       FontSize="18" 
                       FontAttributes="Bold" 
                       Margin="0,0,0,10" />
                
                <ScrollView Grid.Row="1" VerticalOptions="FillAndExpand">
                    <Label Text="{Binding TranscriptionResult}"
                           FontSize="16"
                           TextColor="Black"
                           BackgroundColor="LightGray"
                           Padding="15"
                           VerticalOptions="FillAndExpand"
                           LineBreakMode="WordWrap" />
                </ScrollView>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>